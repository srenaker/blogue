<h1>Listing links</h1>

<table cellpadding='5' border='1'>
  <tr>

    <th>Name</th>
    <th>URL</th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%=h link.name %></td>
    <td><%=h link.url %></td>

    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Delete', link, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New link', new_link_path %>